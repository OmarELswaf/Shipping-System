@model OrderStatusVM

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <strong class="card-title ">حالة الطلب</strong>
            <form method="post" asp-action="UpdateStatus" asp-controller="Order" class="form-sample">
                <input type="hidden" asp-for="OrderId"></input>
                <input type="hidden" asp-for="OrderId"></input>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">الحالة</label>
                            <div class="col-sm-9">
                                <select asp-for="StatusId" class="form-control" asp-items="@(new SelectList(Model.Status, "Id", "Name", Model.StatusId))">
                                </select>
                                <span style="color:red" asp-validation-for="StatusId"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="تعديل" class=" btn btn-primary" />
                </div>
            </form>
         </div>
    </div>
</div>
