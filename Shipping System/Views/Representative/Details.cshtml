@model RepresentativeVM;

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> بيانات الموظف </p>
            <div class="row">
                <div class="col-md-4">
                    <h3>الاسم : @Model.FullName</h3>
                </div>
                <div class="col-md-4">
                    <h3>العنوان : @Model.Address</h3>
                </div>
                <div class="col-md-4">
                    <h3>المحافظة : @Model.GovernateName</h3>
                </div>
                <div class="col-md-4">
                    <h3>المدينة : @Model.CityName</h3>
                </div>
                <div class="col-md-4">
                    <h3>الـفـرع : @Model.BranchName</h3>
                </div>
                <div class="col-md-4">
                    <h3>اسم المستخدم : @Model.UserName</h3>
                </div>
                <div class="col-md-4">
                    <h3>البريد الالكتروني : @Model.Email</h3>
                </div>
                <div class="col-md-4">
                    <h3>رقم الهاتف : @Model.PhoneNumber</h3>
                </div>
                <div class="col-md-4">
                    @if (Model.type_of_discount == 1)
                    {
                        <h3>نوع الخصم : قيمة ثابتة</h3>

                    }
                    else
                    {
                        <h3>نوع الخصم : نسبة مئوية</h3>

                    }
                </div>

                <div class="col-md-4">
                    <h3>نسبة الشركة : @Model.company</h3>
                </div>

            </div>
        </div>

    </div>
</div>
