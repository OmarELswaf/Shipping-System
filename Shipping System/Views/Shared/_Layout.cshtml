                // Play the notification sound
                notificationSound.play();
                $("#redspan").show();
                const $newLink = $('<a href="/Order/RepresntiveOrders?UserName='+UserName+'"class="dropdown-item preview-item"><div class="preview-thumbnail"><div class="preview-icon bg-success"><i class="mdi mdi-calendar"></i></div></div><div class="preview-item-content d-flex align-items-start flex-column justify-content-center"><h6 class="preview-subject font-weight-normal mb-1"> لديك طلب  توصيل جديد الي ' + Name + ' </h6></div></a>');
                $myDiv.prepend($newLink);
                $myDiv.prepend('<div class="dropdown-divider"></div>');


            })

            con.on("Online", function (UserName) {
                const $myList = $('#UsersList');

                const elementId = `user_${UserName}`;

                // Store the added element in the object
                addedElements[elementId] = `
                <li id="${elementId}" class="list active">
                    <div class="profile"><span id="OnlineIcon" class="online"></span></div>
                    <div class="info">
                        <p>${UserName}</p>
                        <p id="OnlineNow">نشط الان</p>
                    </div>
                </li>
            `;

                $myList.prepend(addedElements[elementId]);
            });

            con.on("Offline", function (UserName) {
                const elementId = `user_${UserName}`;

                $(`#${elementId}`).remove();
                delete addedElements[elementId];
            });


            
        })


        // When the user clicks on the notification icon, reset the count
        $("#OnClick").click(() => {
            notificationCount = 0;
            $(".notification-count").hide();
            $("#redspan").hide();

        });



    </script>
